// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int        @id @default(autoincrement())
  createAt DateTime   @default(now())
  password String
  salt     String
  profile  Profile?
  asked    Question[] @relation("ask")
  recived  Question[] @relation("recive")

  @@map("users")
}

model Profile {
  id     Int  @id @default(autoincrement())
  userId Int  @unique
  user   User @relation(fields: [userId], references: [id])

  email    Status @unique
  username String @unique
  name     String // range of name length should be set
  image    String @default("/defaultProfile.jpg")
}

model Question {
  id         Int      @id @default(autoincrement())
  createAt   DateTime @default(now())
  type       Type     @default(anonymous)
  status     Status   @default(received)
  question   String   @db.VarChar(300) // max content length is 300
  answer     String   @db.VarChar(300)
  authorId   Int
  receiverId Int
  author     User     @relation("ask", fields: [authorId], references: [id])
  reciver    User     @relation("recive", fields: [receiverId], references: [id])

  @@map("questions")
}

enum Type {
  anonymous
  onymous
}

enum Status {
  received
  accepted
  rejected
}
