// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int        @id @default(autoincrement())
  createAt DateTime   @default(now())
  password String
  salt     String
  profile  Profile?
  asked    Question[] @relation("ask")
  received Question[] @relation("receive")

  @@map("users")
}

model Profile {
  id   Int  @id
  user User @relation(fields: [id], references: [id])

  email    String @unique
  userName String @unique // range of user name length should be set
  name     String // this also need length limit
  image    String @default("/defaultProfile.jpg")
  like     Like[]
}

model Question {
  id         Int      @id @default(autoincrement())
  createAt   DateTime @default(now())
  type       Type     @default(anonymous)
  status     Status   @default(received)
  question   String   @db.VarChar(300) // max content length is 300
  answer     String   @default("") @db.VarChar(300)
  authorId   Int?
  receiverId Int
  author     User?    @relation("ask", fields: [authorId], references: [id])
  receiver   User     @relation("receive", fields: [receiverId], references: [id])
  like       Like[]

  @@map("questions")
}

model Like {
  id         Int      @id @default(autoincrement())
  questionId Int
  question   Question @relation(fields: [questionId], references: [id])
  userId     Int      @unique
  profile    Profile  @relation(fields: [userId], references: [id])
}

enum Type {
  anonymous
  onymous
}

enum Status {
  received
  accepted
  rejected
}
