// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  id Int @id @default(autoincrement())
  createAt DateTime @default(now())
  email String @unique
  username String @unique
  name String
  password String
  salt String
  profile String @default("/defaultProfile.jpg")
}

model question {
  id Int @id @default(autoincrement())
  createAt DateTime @default(now())
  type String @unique
  status String 
  author Int? @unique
  receiver Int @unique
  question String
  answer String 
}